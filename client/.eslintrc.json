{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "plugins": ["@typescript-eslint", "react", "prettier"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "@typescript-eslint/no-var-requires": 0,
        "no-console": 1
    }
}
